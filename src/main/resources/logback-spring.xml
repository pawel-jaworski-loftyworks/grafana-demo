<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Property for application name based on active profile -->
    <springProfile name="user-service">
        <property name="APP_NAME" value="user-service"/>
    </springProfile>
    <springProfile name="document-service">
        <property name="APP_NAME" value="document-service"/>
    </springProfile>
    <springProfile name="permission-service">
        <property name="APP_NAME" value="permission-service"/>
    </springProfile>
    <springProfile name="!user-service &amp; !document-service &amp; !permission-service">
        <property name="APP_NAME" value="grafana-example"/>
    </springProfile>

    <!-- Console appender with JSON format -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Include standard fields -->
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>

            <!-- Customize field names if needed -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
                <version>[ignore]</version>
            </fieldNames>

            <!-- Add custom fields -->
            <customFields>{"application":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON"/>
    </root>

    <!-- Application logger -->
    <logger name="com.example" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE_JSON"/>
    </logger>

    <!-- Feign client logger - set to INFO to see request/response logs -->
    <logger name="com.example.client" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE_JSON"/>
    </logger>
</configuration>

